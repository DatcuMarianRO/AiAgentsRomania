# AI Agents Romania - Production Environment Configuration
# Copy this file to .env.prod and fill in the actual values

# Domain Configuration
DOMAIN=ai-agents-romania.com

# Database Configuration
POSTGRES_DB=ai_agents_romania
POSTGRES_USER=aiagents
POSTGRES_PASSWORD=TODO_STRONG_DATABASE_PASSWORD_HERE
DATABASE_URL=postgresql://aiagents:TODO_STRONG_DATABASE_PASSWORD_HERE@db:5432/ai_agents_romania

# Redis Configuration
REDIS_PASSWORD=TODO_STRONG_REDIS_PASSWORD_HERE
REDIS_URL=redis://:TODO_STRONG_REDIS_PASSWORD_HERE@redis:6379

# JWT Configuration
JWT_SECRET=TODO_STRONG_JWT_SECRET_HERE_AT_LEAST_64_CHARS
JWT_EXPIRES_IN=24h

# Supabase Configuration
SUPABASE_URL=TODO_YOUR_SUPABASE_PROJECT_URL
SUPABASE_ANON_KEY=TODO_YOUR_SUPABASE_ANON_KEY
SUPABASE_SERVICE_ROLE_KEY=TODO_YOUR_SUPABASE_SERVICE_ROLE_KEY

# Frontend Environment Variables (for build time)
NEXT_PUBLIC_API_URL=https://api.ai-agents-romania.com
NEXT_PUBLIC_SUPABASE_URL=TODO_YOUR_SUPABASE_PROJECT_URL
NEXT_PUBLIC_SUPABASE_ANON_KEY=TODO_YOUR_SUPABASE_ANON_KEY

# OpenRouter Configuration
OPENROUTER_API_KEY=TODO_YOUR_OPENROUTER_API_KEY
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Stripe Configuration
STRIPE_SECRET_KEY=TODO_YOUR_STRIPE_SECRET_KEY
STRIPE_PUBLISHABLE_KEY=TODO_YOUR_STRIPE_PUBLISHABLE_KEY
STRIPE_WEBHOOK_SECRET=TODO_YOUR_STRIPE_WEBHOOK_SECRET
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=TODO_YOUR_STRIPE_PUBLISHABLE_KEY

# n8n Configuration (Optional)
N8N_USER=admin
N8N_PASSWORD=TODO_STRONG_N8N_PASSWORD_HERE
N8N_HOST=api.ai-agents-romania.com

# Security Configuration
CORS_ORIGIN=https://ai-agents-romania.com
ALLOWED_ORIGINS=https://ai-agents-romania.com,https://www.ai-agents-romania.com

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_ENABLED=true
LOG_MAX_SIZE=100m
LOG_MAX_FILES=30d

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration (if using email features)
SMTP_HOST=TODO_YOUR_SMTP_HOST
SMTP_PORT=587
SMTP_USER=TODO_YOUR_SMTP_USER
SMTP_PASSWORD=TODO_YOUR_SMTP_PASSWORD
SMTP_FROM_EMAIL=noreply@ai-agents-romania.com
SMTP_FROM_NAME="AI Agents Romania"

# Monitoring & Analytics (Optional)
SENTRY_DSN=TODO_YOUR_SENTRY_DSN_IF_USING
GA_TRACKING_ID=TODO_YOUR_GOOGLE_ANALYTICS_ID_IF_USING

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30